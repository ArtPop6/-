      .center__info
        display flex
        justify-content space-between
        margin-bottom 28px

        .center__info--type
          font-family PingFangSC-Regular
          font-size 28px
          color #3B3B3B
          letter-spacing -0.46px
          text-align right

        .center__info--time
          font-family PingFangSC-Regular
          font-size 30px
          color #0F0F0F
          letter-spacing -0.5px
          text-align right

    .container__pay
      display flex
      flex-direction column
      width 706px
      height auto
      margin-top 24px
      padding 0 24px 0 20px
      background #FFFFFF
      border-radius 12px              

      .pay__time
        display flex
        align-items center
        height 96px
        
        .pay__time--icon
          width 10px
          height 28px
          background-image linear-gradient(-180deg, #F3D825 0%, #FFDE00 100%)
          border-radius 6px

        .pay__time--title
          margin-left 12px
          font-family PingFangSC-Medium
          font-size 32px
          color #0F0F0F
          letter-spacing -0.52px
          text-align right

      .pay__way
        display flex
        height auto

        .way__select
          display flex
          width 706px

          .way__wx
            font-family PingFangSC-Semibold
            font-size 28px
            color #3B3B3B
            letter-spacing -0.46px
            text-align right

          .way__price
            position absolute
            right 46px
            font-family PingFangSC-Regular
            font-size 30px
            color #0F0F0F
            letter-spacing -0.5px
            text-align right

          .way__discounts
            // display block
            margin-left 6px
            padding 8px
            width 38px
            height 20px
            font-family PingFangSC-Regular
            font-size 22px
            color #0F0F0F
            letter-spacing -0.25px
            text-align right
            opacity 0.5
            background-image linear-gradient(-180deg, #FFDE00 0%, #FFDE00 100%)
            border-radius 8px

          .way__package
            position absolute
            right 46px
            font-family PingFangSC-Regular
            font-size 30px
            color #0F0F0F
            letter-spacing -0.5px
            text-align right  

          .way__img
            // position absolute
            // right 46px
            width 30px
            height 40px 

    .container__foot
      display flex
      flex-direction column
      width 706px
      height auto 

      .container__rule
        font-family PingFangSC-Semibold
        margin-top 14px
        font-size 24px
        color #727272
        letter-spacing -0.4px
        text-align left

      .container__text
        display flex
        margin 8px 0
        font-family PingFangSC-Regular
        font-size 20px
        color #727272
        letter-spacing -0.16px
        flex-wrap wrap              

  .foot
    display flex
    justify-content space-between
    align-items center
    padding 0 22px 
    width 750px
    height 100px
    background rgba(255,255,255,0.70)
    box-shadow 0 0 5px 0 rgba(0,0,0,0.04)

    .foot__price
      font-family PingFangSC-Semibold
      font-size 28px
      color #0F0F0F
      letter-spacing -1.1px
      text-align right
      font-weight bold

    .foot__affirm
      background-image linear-gradient(-180deg, #FFDE00 0%, #FFDE00 100%)
      border-radius 38px
      width 178px
      height 74px
      font-family PingFangSC-Regular
      font-size 28px
      color #000000
      letter-spacing -0.31px
      text-align center
      line-height 74px  

.van-radio
  margin-bottom 38px

.van-radio__label
  line-height none          



