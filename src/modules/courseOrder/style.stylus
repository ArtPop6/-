body
  background-color #fff !important
  height 100%

.course
  display flex
  flex-direction column
  width 750px
  height 100%

  .header
    width 750px
    height 124px
    background linear-gradient(-180deg, #F3D825 0%, #FFDE00 100%)

  .title
    position absolute
    top 28px
    left 22px
    width 706px
    height 192px
    background #FFFFFF
    border-radius 12px
    box-shadow 0 0 6px 0 rgba(229,229,229,1)

    .title__left
      position absolute
      top 56px
      left 26px
      width 96px
      height 96px
      border-radius 100%
      // background red

      .title__left--img
        width 96px
        height 96px
        border-radius 100%

    .title__name
      position absolute
      font-family PingFangSC-Medium
      font-size 32px
      font-weight bold
      color #0F0F0F
      letter-spacing -0.52px
      text-align right
      top 52px
      left 144px

    .title__type
      position absolute
      top 118px
      left 144px
      font-family PingFangSC-Regular
      font-size 24px
      color #0F0F0F
      letter-spacing -0.4px
      text-align right 

    .title__price
      position absolute
      font-weight bold
      top 76px
      right 22px
      font-family PingFangTC-Semibold
      font-size 40px
      color #0F0F0F
      letter-spacing -0.66px
      text-align right

