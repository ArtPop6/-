.personal-trainer
  //background #fafafc
  height 100%
  background #fff
  display flex
  flex-direction column

  .student-info__wrap
    //display flex
    width 100%
    padding 33px 38px 28px 33px
    justify-content space-between
    border-bottom 1px solid #ebebeb
    align-items flex-start
    background $primary-color

    .class-desc
      display flex
      justify-content space-between
      margin-bottom 20px

      .class-name__desc
        display flex
        align-items center

        .class-name__title
          margin-left 10px
          font-weight bold
          margin-right 10px

        .class-name
          padding 2px 13px
          background #E6C805
          color #fff
          font-weight 500
          font-size 28px
          border-radius 8px
          text-align center

      .coach-desc
        display flex
        align-items center
        justify-content flex-start

        .coach-title
          font-weight bold
          margin-right 10px
          margin-left 10px

        .coach-name
          padding 2px 13px
          background #E6C805
          color #fff
          font-weight 500
          font-size 28px
          border-radius 8px
          text-align center

    .class-time__desc
      display flex
      align-items center

      .class-time__title
        font-weight bold
        margin-right 10px
        margin-left 10px

      .class-time
        padding 2px 13px
        background #E6C805
        color #fff
        font-weight 500
        font-size 28px
        border-radius 8px
        text-align center

  .class-proccess
    flex 1
    overflow auto
    padding 20px

    //.class-plan__wrap::before
    //  content ''
