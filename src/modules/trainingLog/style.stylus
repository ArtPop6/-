  .sign-up__wrap
    height 110px
    width 100%
    display flex
    justify-content space-around

    .sign-up
      height 72px
      width 90%
      background $primary-color
      line-height 72px
      color #fff
      font-weight bold
      text-align center
      border-radius 10px
      box-shadow 3px 3px 5px 0px rgba(0, 0, 0, 0.04)
      text-shadow 3px 3px 5px rgba(0, 0, 0, 0.04)

    .disableSign
      opacity 0.36
      height 72px
      width 90%
      background $primary-color
      line-height 72px
      color #fff
      font-weight bold
      text-align center
      border-radius 10px
      box-shadow 3px 3px 5px 0px rgba(0, 0, 0, 0.04)
      text-shadow 3px 3px 5px rgba(0, 0, 0, 0.04)
