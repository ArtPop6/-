    .class-plan__wrap
      position relative
      padding 25px 25px 30px 25px
      background #fff
      margin-bottom 22px
      border-radius 8px
      box-shadow 0px 2px 9px 0px rgba(0, 0, 0, 0.08)

      .class-plan
        font-weight bold
        margin-bottom 15px

      .van-uploader
        .van-uploader__wrapper
          .van-uploader__preview
            margin-right 18px

            .van-uploader__preview-image
              border 1px solid #ebebeb

          .van-uploader__upload
            width 110px
            height 110px
            border 1px solid #ebebeb
            margin-bottom 15px

            .van-icon
              font-size 36px

      .no-picture__wrap
        margin-bottom 12px
        display flex
        flex-direction column
        align-items center

        .no-picture
          width 170px
          height 98px

        .no-picture__text
          font-size 28px
          font-weight bold
          color #666

      .log-content
        width 100%
        padding-top 18px
        display flex
        justify-content space-between
        border-top 1px solid #ebebeb

        .pt-avatar
          width 95px
          height 95px
          border 2px solid #EBEBEB
          -webkit-border-radius 100%
          -moz-border-radius 100%
          border-radius 100%

        .log-text::before
          content ''
          position absolute
          width 0
          height 0
          left -23px
          top 13px
          border-right 13px solid #ebebeb
          border-bottom 13px solid #fff
          border-top 13px solid #EBEBEB
          border-left 13px solid #fff
          z-index 999

        .log-text
          position relative
          width 80%
          padding 10px
          font-size 27px
          color #888
          word-wrap break-word
          background #ebebeb
          border-radius 8px
          box-shadow 0px 2px 9px 0px rgba(0, 0, 0, 0.08)

          .has-text
            width 100%
            word-wrap break-word

          .no-text
            width 100%

