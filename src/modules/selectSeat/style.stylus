        background #fcdb00
        border-radius 5px
        margin-right 7px

  .ticket-info
    width 100%
    height 210px
    padding 0 30px
    display flex
    justify-content space-between
    // margin-top 56px

    .ticket-info__content
      display flex
      justify-content flex-start
      flex-direction column

      .ticket-info__store
        font-size 29px
        font-weight 600
        font-family PingFangSC-Semibold, PingFang SC
        color rgba(43, 44, 49, 1)
        margin-bottom 10px

      .ticket-info__room
        font-size 25px
        font-weight 400
        color rgba(43, 44, 49, 1)
        font-family PingFangSC-Regular, PingFang SC
        margin-bottom 13px

      .ticket-info__time
        color #2B2C31
        font-size 28px
        font-family PingFangSC-Regular, PingFang SC

    .ticket-info__date
      background #000
      color #fff
      border-radius 3px
      height 48px
      line-height 48px
      padding 4px 23px
      line-height 40px
      margin-top 8px
      font-size 28px
      border-radius 5px

  .seat-tab
    height 98px
    padding 0 40px 0 30px
    display flex
    justify-content space-between
    align-items center
    box-shadow 0px -2px 4px 0px rgba(0, 0, 0, 0.1)

    .seat-number
      color #2b2c31
      font-family PingFangSC-Semibold, PingFang SC
      font-size 28px
      color rgba(43, 44, 49, 1)
      font-weight 600

    .select-button
      width 256px
      height 60px
      background rgba(252, 219, 0, 1)
      border-radius 10px
      font-size 27px
      text-align center
      line-height 60px
      font-weight bold
      color #fff
      box-shadow 3px 3px 5px 0px rgba(0, 0, 0, 0.04)
      text-shadow 3px 3px 5px rgba(0, 0, 0, 0.04)
