.slider-wrap
  //height 350px
  display flex
  flex-direction column
  //box-shadow 0px -2px 3px 0px rgba(0, 0, 0, .1)
  //border-bottom 1px solid #ebebeb
  box-shadow 0 1px 3px 0 rgba(0, 0, 0, 0.03)

  .current-date__title
    height 168px
    display flex
    padding 10px 0 10px 18px
    align-items flex-end
    justify-content space-between
    background linear-gradient(180deg, rgba(243, 216, 37, 1) 0%, rgba(255, 222, 0, 1) 100%)

    .time-desc
      display flex
      align-items flex-end

      .current-date
        width 100px
        height 100px
        font-size 83px
        line-height 100px
        font-weight bold
        margin-right 6px
        text-shadow 3px 3px 5px rgba(0, 0, 0, 0.04)

      .time-right
        display flex
        flex-direction column
        width 120px
        height 86px

        .current-week
          height 36px
          font-size 26px
          line-height 36px
          margin-bottom 3px

        .current-month-year
          height 36px
          line-height 36px
          font-size 28px

    .decorate-pic
      width 130px
      height 130px
      position absolute
      right 0
      top 23px
      // background-image url('./img/decorate.png')
      // background-repeat no-repeat
      // background-size 100% 100%
      animation bite 0.5s 0.5s cubic-bezier(0.42, 1.14, 1, 1) both
      -webkit-animation bite 0.5s 0.5s cubic-bezier(0.42, 1.14, 1, 1) both

      @keyframes bite
        0%
          opacity 0
          transform translate(0px, 142px) rotate(-70deg) scale(0.8, 1.1)
        // transform-origin 100% 20%

        10%
          transform translate(0px, -10px) rotate(-52deg) scale(1.2, 0.8)
        // transform-origin 100% 20%

        50%
          transform translate(0px, 5px) scale(0.95, 1.05)
        // transform-origin 100% 20%

        80%
          transform translate(0px, -2px) rotate(-20deg) scale(1.02, 0.98)
        // transform-origin 100% 20%

        100%
          opacity 1
          transform translate(0px, 0px) rotate(0deg) scale(1, 1)

    // transform-origin 100% 20%

    .decorate-pic__two
      width 130px
      height 130px
      position absolute
      right 0
      top 23px
      // background-image url('./img/decorate.png')
      // background-repeat no-repeat
      // background-size 100% 100%
      animation a-c-paper 0.5s 0.5s cubic-bezier(0.42, 1.14, 1, 1) both
      -webkit-animation a-c-paper 0.5s 0.5s cubic-bezier(0.42, 1.14, 1, 1) both

      @keyframes a-c-paper
        0%
          opacity 0
          transform translate(0px, 142px) scale(0.9, 1.1)

        30%
          transform translate(0px, -10px) scale(1.2, 0.8)

        60%
          transform translate(0px, 5px) scale(0.95, 1.05)

        80%
          transform translate(0px, -2px) scale(1.02, 0.98)

        100%
          opacity 1
          transform translate(0px, 0px) scale(1, 1)

  .date-pick__wrap
    border-top 1px solid rgb(238, 238, 238)
    height 166px
    display flex
    padding-top 20px
    background #fff
    width 2250px
    box-shadow 0px -2px 8px 0px rgba(0, 0, 0, .1)
    border-bottom 1px solid #ebebeb

    .date-pick__slider
      display flex
      // flex-direction column
      // width 100px
      // margin-left 6px
      width 750px
      align-items flex-start

      .date-pick__threeweeks
        display flex
        width 100px
        flex-shrink 0
        flex-direction column
        margin-right 6px
        align-items center
        position relative

        .week-day
          text-align center
          font-size 28px

        .today-week
          color #fcdb0b
          font-weight 800

        .date__slider
          font-size 24px
          text-align center
          color #999
          margin-top 16px
          width 70px
          height 70px
          border-radius 100%
          line-height 72px

        .default-dot
          width 10px
          height 10px
          border-radius 100%
          background #fcdb0b
          position absolute
          top 110px
          right 45px

        .dot-today
          background #fff

        .today-date
          background #fcdb0b
          color #fff
          font-weight bold
          text-shadow 3px 3px 5px rgba(0, 0, 0, 0.04)
          box-shadow 3px 3px 5px 0px rgba(0, 0, 0, 0.04)
